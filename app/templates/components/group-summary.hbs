{{#link-to "projects.project.errors.error.events.latest" group.id}}
  <div class="group-header">
    {{status-button group=group}}
    <span class="group-occurrences">
      <span class="glyphicon glyphicon-fire"></span>
      {{group.occurrences}}
    </span>
    <span class="group-last-seen-at text-muted text-sm pull-right">
      Last seen {{time-ago group.lastSeenAt}}.
    </span>
  </div>
  <div class="group-body">
    <span class="group-message">
      {{#if group.message}}
        {{group.message}}
      {{else}}
        (no message)
      {{/if}}
    </span>
  </div>
{{/link-to}}
