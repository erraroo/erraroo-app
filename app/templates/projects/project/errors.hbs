<div class="errors">
  <div class="errors-filters">
    <div class="form-group">
      <label class="control-label">Error Status:</label>
      {{view "select" content=statusValues value=status class="form-control"}}
    </div>

    {{#if library}}
      {{#link-to (query-params library=null)}}
        Clear lib
      {{/link-to}}
    {{/if}}
    <div class="form-group">
      <button class="btn btn-success btn-xs" {{action "resolveAllErrors"}}>Resolve All</button>
    </div>
  </div>
  {{#each arrangedContent as |error|}}
    {{error-summary error=error currentError=currentError}}
  {{else}}
    <h4 class="text-muted text-center">YAY no errors :)</h4>
  {{/each}}
</div>
<div class="errors-outlet">
  {{outlet}}
</div>
