<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="opener">
      <h1>You can now reset your password.</h1>
      <p>We are so glad you could make it back!</p>
    </div>

    {{#each model.errors.Token as |message|}}
      <div class="alert alert-danger">{{message}}</div>
    {{/each}}

    <div class="form-password-recover box">
      <div class="form-group">
        <label for="new-password">New Password:</label>
        {{input type="password" value=model.password elementId="new-password" class="form-control"}}
        {{#each model.errors.Password as |message|}}
          <div class="text-danger">{{message}}</div>
        {{/each}}
      </div>

      <div class="form-actions">
        <button {{action "resetPassword"}} class="btn btn-primary">Change My Password</button>
      </div>
    </div>
  </div>
</div>
