<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class=page-header>
      <h2>Please sign in</h2>
    </div>

    {{#if message}}
      <div class="alert alert-danger message">
        {{message}}
      </div>
    {{/if}}

    <form {{action "login" on="submit"}}>
      <div class="form-group">
        <label for="email">Email</label>
        {{input value=email elementId="email" class="form-control" placeholder="bob@example.com"}}
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        {{input value=password elementId="password" type="password" class="form-control" placeholder="your password"}}
      </div>

      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
      </div>

      <p class="text-center">
        {{#link-to "signup"}}Need an account?{{/link-to}}
        {{#link-to "forgot-password"}}Forgot Password?{{/link-to}}
      </p>
    </form>
  </div>
</div>
