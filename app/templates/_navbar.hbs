              <span class="label label-danger">{{project.unresolvedCount}}</span>
            {{/if}}
            Errors
          {{/link-to}}
        </li>
        <li>
          {{#link-to "projects.project.performance" project}}
            <span class="glyphicon glyphicon-stats"></span>
            Perfomance
          {{/link-to}}
        </li>
