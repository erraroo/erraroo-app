<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class=page-header>
      <h2>Forgot your password?</h2>
    </div>
    {{#if model.message}}
      <div class="alert alert-danger">
        {{model.message}}
      </div>
    {{/if}}

    <div class="form-group">
      <label for="email">Email:</label>
      {{input value=model.email elementId="email" class="form-control"}}
    </div>

    <div class="form-actions">
      <button {{action "requestPassword" model.email}} class="btn btn-primary">Request new password</button>
    </div>
  </div>
</div>
